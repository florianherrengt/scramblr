{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowUnusedLabels": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2015", "esnext"],
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node", "jest"]
  },
  "exclude": ["src/**/*.skip.ts"],
  "include": ["src/**/*"]
}
